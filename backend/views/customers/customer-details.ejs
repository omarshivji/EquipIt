<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= customer.name %></title>
</head>
<body>
  <h1><%= customer.name %></h1>
  <ul>
    <li>Email: <%= customer.email %></li>
    <li>Address: <%= customer.address %></li>
    <li>Phone: <%= customer.phone %></li>
    <li>Date of Birth: <%= customer.DOB %></li>
  </ul>
  <form method="POST" action="/customers/<%= customer.customer_id %>?_method=PUT">
    <h2>Edit Customer:</h2>
    <div>
      <label>Name:</label>
      <input type="text" name="name" value="<%= customer.name %>" required>
    </div>
    <div>
      <label>Email:</label>
      <input type="email" name="email" value="<%= customer.email %>" required>
    </div>
    <div>
      <label>Address:</label>
      <input type="text" name="address" value="<%= customer.address %>" required>
    </div>
    <div>
      <label>Phone:</label>
      <input type="tel" name="phone" value="<%= customer.phone %>" required>
    </div>
    <div>
      <label>Date of Birth:</label>
      <input type="date" name="DOB" value="<%= customer.DOB %>" required>
    </div>
    <div>
      <label>Password:</label>
      <input type="password" name="password" required>
    </div>
    <button type="submit">Save Changes</button>
