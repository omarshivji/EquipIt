<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Edit Order <%= order.order_id %></title>
  </head>
  <body>
    <h1>Edit Order <%= order.order_id %></h1>
    <form method="POST" action="/orders/<%= order.order_id %>?_method=PUT">
      <label for="customer_id">Customer ID</label>
      <input type="text" id="customer_id" name="customer_id" value="<%= order.customer_id %>" required><br>
      <label for="store_id">Store ID</label>
      <input type="text" id="store_id" name="store_id" value="<%= order.store_id %>" required><br>
      <label for="product_id">Product ID</label>
      <input type="text" id="product_id" name="product_id" value="<%= order.product_id %>" required><br>
      <label for="product_name">Product Name</label>
      <input type="text" id="product_name" name="product_name" value="<%= order.product_name %>" required><br>
      <label for="quantity">Quantity</label>
      <input type="number" id="quantity" name="quantity" value="<%= order.quantity %>" required><br>
      <label for="price">Price</label>
      <input type="number" id="price" name="price" value="<%= order.price %>" step="0.01" required><br>
      <label for="order_date">Order Date</label>
      <input type="date" id="order_date" name="order_date" value="<%= order.order_date %>" required><br>
      <button type="submit">Update Order</button>
    </form>
    <a href="/orders">Back to Orders</a>
  </body>
</html>
